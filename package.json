// package.json
{
  "name": "tinypint",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "dev": "tailwindcss -i style.css -o output.css --watch",
    "build": "tailwindcss -i style.css -o output.css --minify",
    "start": "npx serve ."
  },
  "devDependencies": {
    "tailwindcss": "latest",
    "@tailwindcss/cli": "latest"
  }
}
